<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/machine1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IHM">

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Domotifications 2024"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/notificationPoubelle"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/rond"
        android:gravity="center"
        android:text="0"
        android:textSize="32sp"
        android:visibility="invisible"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintBottom_toTopOf="@+id/boutonPoubelle"
        app:layout_constraintLeft_toLeftOf="@+id/boutonPoubelle"
        app:layout_constraintRight_toRightOf="@+id/boutonPoubelle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/boutonPoubelle"
        android:src="@drawable/poubelle_verte"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="64dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/notificationMachine"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/rond"
        android:gravity="center"
        android:text="0"
        android:textSize="32sp"
        android:visibility="invisible"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintBottom_toTopOf="@+id/boutonMachine"
        app:layout_constraintLeft_toLeftOf="@+id/boutonMachine"
        app:layout_constraintRight_toRightOf="@+id/boutonMachine"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/boutonMachine"
        android:src="@drawable/machine"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="64dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/notificationBoiteAuxLettres"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/rond"
        android:gravity="center"
        android:text="0"
        android:textSize="32sp"
        android:visibility="invisible"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintBottom_toTopOf="@+id/boutonBoiteAuxLettres"
        app:layout_constraintLeft_toLeftOf="@+id/boutonBoiteAuxLettres"
        app:layout_constraintRight_toRightOf="@+id/boutonBoiteAuxLettres"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/boutonBoiteAuxLettres"
        android:src="@drawable/boite_aux_lettres"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="64dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>